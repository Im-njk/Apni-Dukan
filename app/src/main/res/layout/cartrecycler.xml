<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/porimgcart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"/>
    <RelativeLayout
        android:id="@+id/linearcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/porimgcart"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/propricecart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:layout_toRightOf="@id/propricecart"
            android:layout_alignBottom="@id/propricecart"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:text="productname"
        android:textColor="@color/black"
        android:id="@+id/protitlecart"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$."
        android:id="@+id/propricecart"
        android:layout_below="@id/protitlecart"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:text="Quantity"
        android:id="@+id/quantitytxt"
        android:textColor="@color/black"
        android:layout_below="@id/propricecart"
        android:layout_margin="5dp"/>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_toRightOf="@id/quantitytxt"
              android:layout_alignTop="@id/quantitytxt"
              android:id="@+id/quantitylayout"
              android:layout_marginHorizontal="10dp"
              android:layout_alignBottom="@id/quantitytxt">
              <ImageView
                  android:id="@+id/minusbtn"
                  android:layout_width="14dp"
                  android:layout_height="match_parent"
                  android:src="@drawable/minusbtn"
                  android:background="@color/black"/>
              <TextView
                  android:id="@+id/quantity"
                  android:layout_width="wrap_content"
                  android:layout_height="14dp"
                  android:layout_marginHorizontal="10dp"
                  android:textColor="@color/black"
                  android:text="1"/>
              <ImageView
                  android:id="@+id/plusbtn"
                  android:layout_width="14dp"
                  android:layout_height="match_parent"
                  android:src="@drawable/plusbtn"
                  android:gravity="center"
                  android:background="@color/black"/>
          </LinearLayout>
        <TextView
            android:id="@+id/removecart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_below="@id/quantitylayout"
            android:layout_marginTop="20dp"
            android:textColor="@color/error"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>