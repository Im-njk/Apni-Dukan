<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_height="175dp"
    android:elevation="8dp"
     android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/white">
   <ImageView
       android:id="@+id/proimg"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:transitionName="p_image"
       android:layout_marginTop="10dp"
       android:layout_marginHorizontal="30dp"
       />
    <TextView
        android:id="@+id/protxt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:transitionName="p_name"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."/>
    <TextView
        android:id="@+id/pricexml"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:transitionName="p_price"
        android:layout_weight="1"
        android:gravity="center_vertical" />
        <TextView
            android:id="@+id/discountxml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="50%"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/circle1"
            />
    </LinearLayout>
</LinearLayout>