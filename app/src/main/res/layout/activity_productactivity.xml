<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.productactivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:id="@+id/scroll">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/wishlistbtnxml"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/wishlistunselected"
            android:background="#00ffffff"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:translationZ="90dp"
            android:layout_alignBottom="@id/productimg"/>
      <ImageView
          android:id="@+id/productimg"
          android:layout_width="match_parent"
          android:layout_height="450dp"
          android:padding="20dp"
          android:transitionName="p_image"
          android:elevation="5dp" />
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/backbtn"
            app:tint="@color/black"
            android:translationZ="90dp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="productname"
            android:textColor="@color/black"
            android:layout_below="@+id/productimg"
            android:textSize="16dp"
            android:transitionName="p_name"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/productname"
            android:id="@+id/linearbelowname"
            android:layout_below="@id/productname">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:layout_marginRight="40dp"
                android:textColor="@color/black"
                android:id="@+id/proprice"
                android:transitionName="p_price"
                android:textSize="15dp"
                android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/ratinghead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle1"
            android:text="  4.5  "
            android:layout_marginTop="5dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf"
            android:layout_below="@id/linearbelowname"
            android:layout_marginVertical="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DFDFDF"
            android:layout_below="@id/discretpionxml"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/discretpionxml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/productname"
            android:layout_below="@id/linearbelowname"
            android:text="Discreption"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_alignRight="@id/productname"
            android:textStyle="italic"
            android:autoSizeTextType="uniform"/>
        <TextView
            android:id="@+id/pointwiseD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_below="@id/discretpionxml"
            android:layout_alignLeft="@id/discretpionxml"
            android:layout_marginVertical="15dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/discretpionxml"
            android:layout_below="@id/pointwiseD"
            android:layout_alignRight="@id/productname"

            android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="1. Feature "
               android:textColor="@color/black"
               android:layout_marginTop="0dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Feature "
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:layout_gravity="bottom"
        android:background="@color/primary"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addtocartxml"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:layout_marginRight="1dp"
            android:background="@color/primary" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/primary"
            android:layout_marginLeft="1dp"
            android:text="Buy Now"/>

    </LinearLayout>
</LinearLayout>