<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.WishlistActivity">
    <ImageView
        android:id="@+id/wish_backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/backbtn"
        app:tint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wishlist"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/wish_backbtn"/>
    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_below="@id/wish_backbtn"
        android:layout_marginTop="15dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/wish_recyclercart"
        android:layout_height="match_parent"
        android:layout_below="@id/seperator"
        android:elevation="8dp"
        android:layout_marginVertical="5dp" />

        <TextView
            android:id="@+id/totalcartprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:textColor="@color/black" />

</RelativeLayout>